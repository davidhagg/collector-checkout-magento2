<?xml version="1.0"?>
<config xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:noNamespaceSchemaLocation="urn:magento:framework:ObjectManager/etc/config.xsd">

    <virtualType name="CollectorBankCheckoutFacade" type="Webbhuset\CollectorBankCheckout\Model\Adapter">
        <arguments>
            <argument name="code" xsi:type="const">Webbhuset\CollectorBankCheckout\Model\Ui\ConfigProvider::CHECKOUT_CODE</argument>
            <argument name="formBlockType" xsi:type="string">Webbhuset\CollectorBankCheckout\Block\Form\Checkout</argument>
            <argument name="infoBlockType" xsi:type="string">Webbhuset\CollectorBankCheckout\Block\Admin\OrderInfo</argument>
            <argument name="valueHandlerPool" xsi:type="object">CollectorBankInvoiceValueHandlerPool</argument>
            <argument name="commandPool" xsi:type="object">CollectorBankCheckoutCommandPool</argument>
        </arguments>
    </virtualType>

    <virtualType name="CollectorBankInvoiceValueHandlerPool" type="Magento\Payment\Gateway\Config\ValueHandlerPool">
        <arguments>
            <argument name="handlers" xsi:type="array">
                <item name="default" xsi:type="string">CollectorBankInvoiceConfigValueHandler</item>
            </argument>
        </arguments>
    </virtualType>

    <virtualType name="CollectorBankInvoiceConfigValueHandler" type="Magento\Payment\Gateway\Config\ConfigValueHandler">
        <arguments>
            <argument name="configInterface" xsi:type="object">CollectorBankInvoicePaymentConfig</argument>
        </arguments>
    </virtualType>

    <virtualType name="CollectorBankInvoicePaymentConfig" type="Magento\Payment\Gateway\Config\Config">
        <arguments>
            <argument name="methodCode" xsi:type="const">Webbhuset\CollectorBankCheckout\Config::CHECKOUT_CODE</argument>
        </arguments>
    </virtualType>

    <virtualType name="CollectorBankCheckoutCommandPool" type="\Magento\Payment\Gateway\Command\CommandPool">
        <arguments>
            <argument name="commands" xsi:type="array">
                <item name="capture" xsi:type="string">CollectorBankCheckoutCaptureCommand</item>
                <item name="void" xsi:type="string">CollectorBankCheckoutCancelCommand</item>
                <item name="cancel" xsi:type="string">CollectorBankCheckoutCancelCommand</item>
                <item name="refund" xsi:type="string">CollectorBankCheckoutRefundCommand</item>
                <item name="authorize" xsi:type="string">CollectorBankCheckoutAuthorizeCommand</item>
            </argument>
        </arguments>
    </virtualType>

    <virtualType name="CollectorBankCheckoutCaptureCommand" type="Webbhuset\CollectorBankCheckout\Gateway\Command\CollectorBankCommand">
        <arguments>
            <argument name="client" xsi:type="array">
                <item name="method" xsi:type="string">capture</item>
            </argument>
        </arguments>
    </virtualType>

    <virtualType name="CollectorBankCheckoutAuthorizeCommand" type="Webbhuset\CollectorBankCheckout\Gateway\Command\CollectorBankCommand">
        <arguments>
            <argument name="client" xsi:type="array">
                <item name="method" xsi:type="string">authorize</item>
            </argument>
        </arguments>
    </virtualType>

    <virtualType name="CollectorBankCheckoutCancelCommand" type="Webbhuset\CollectorBankCheckout\Gateway\Command\CollectorBankCommand">
        <arguments>
            <argument name="client" xsi:type="array">
                <item name="method" xsi:type="string">void</item>
            </argument>
        </arguments>
    </virtualType>

    <virtualType name="CollectorBankCheckoutRefundCommand" type="Webbhuset\CollectorBankCheckout\Gateway\Command\CollectorBankCommand">
        <arguments>
            <argument name="client" xsi:type="array">
                <item name="method" xsi:type="string">refund</item>
            </argument>
        </arguments>
    </virtualType>

    <type name="Webbhuset\CollectorBankCheckout\Model\Logger\Logger">
        <arguments>
            <argument name="name" xsi:type="string">collectorbank-checkout</argument>
            <argument name="handlers"  xsi:type="array">
                <item name="system" xsi:type="object">Webbhuset\CollectorBankCheckout\Model\Logger\Handler</item>
            </argument>
        </arguments>
    </type>
</config>